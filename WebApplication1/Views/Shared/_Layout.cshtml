    <script>
        var personsData = 'http://assignment.siteimprove.com/api/persons';
        var personDetails = 'http://assignment.siteimprove.com/api/persondetails/';
        var personNumber;
        var parentElement;
        var buttonId;
        var parentTr;

        $(document).ready(function () {
            // Send an AJAX request for parents
