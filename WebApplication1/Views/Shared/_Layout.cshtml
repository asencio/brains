                        var markup = "<tr><td>" + name + "</td><td>" + yOb + "</td><td><button id=" + buttonId + " > " + numCh + "</button></td><td>" + prof + "</td></tr>";

                        //$('button').attr('id', buttonId);

                        //Render main table
                        $("table tbody").append(markup);
